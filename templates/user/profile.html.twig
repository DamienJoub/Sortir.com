{% extends 'base.html.twig' %}

{% block main %}
    <label style="display: flex; justify-content: center; font-size: 2rem">{{ profil.prenom }} {{ profil.nom }}</label>
    <div class="profil">
        <div class="row">
            <label>Téléphone :</label>
            <p>{{ profil.telephone }}</p>
        </div>
        <div class="row">
            <label>Email :</label>
            <p>{{ profil.mail }}</p>
        </div>
        <div class="row">
            <label>Campus :</label>
            <p>{{ profil.campus.nom }}</p>
        </div>
        <input class="btn btn-primary" type="button" value="Retour" onclick="history.back()">
    </div>
    <div>
        <img src="{{ asset('uploads/photoProfil/' ~ profil.nomPhotoProfil) }}">
    </div>
{% endblock %}